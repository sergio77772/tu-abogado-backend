# Habilitar rewrite engine
RewriteEngine On

# Permitir acceso directo a archivos PHP
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Headers CORS - CRÍTICO: "always" asegura que se envíen siempre
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin"
    Header always set Access-Control-Max-Age "86400"
    
    # Manejar OPTIONS explícitamente
    <If "%{REQUEST_METHOD} == 'OPTIONS'">
        Header always set Access-Control-Allow-Origin "*"
        Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin"
    </If>
    
    # Headers específicos para archivos YAML (Swagger)
    <FilesMatch "\.(yaml|yml)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Content-Type "text/yaml; charset=utf-8"
    </FilesMatch>
</IfModule>

# Páginas de error personalizadas (opcional)
ErrorDocument 404 /index.php

